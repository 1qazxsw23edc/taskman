<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/content_frame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="When......."
        android:id="@+id/whenString"
        android:layout_row="0"
        android:layout_column="0" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area Entered"
        android:id="@+id/enterArea"
        android:layout_row="2"
        android:layout_column="0"
        android:checked="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I want to......."
        android:id="@+id/textView"
        android:layout_row="3"
        android:layout_column="0" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Wifi"
        android:id="@+id/enableWifi"
        android:layout_row="4"
        android:layout_column="0"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mute"
        android:id="@+id/setMute"
        android:layout_row="5"
        android:layout_column="0"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setVibrate"
        android:layout_row="6"
        android:layout_column="0"
        android:checked="false"
        android:text="Vibrate" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:id="@+id/sendMessage"
        android:layout_row="7"
        android:layout_column="0"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set GPS"
        android:id="@+id/setGPS"
        android:layout_row="8"
        android:layout_column="0"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AirplaneMode"
        android:id="@+id/setAirplane"
        android:layout_row="9"
        android:layout_column="0"
        android:checked="false" />

</GridLayout>